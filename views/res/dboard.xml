<?xml version="1.0" encoding="utf-8"?>
<theme 
    id="dboard"
    parent="theme_default"
    >

    <color id="window_background" value="#37313B"/>
    <color id="dialog_background" value="#37313B"/>
    <color id="edit_caret" value="#FFFFFF"/>

    <style id="BUTTON"
        align="Center"
        margins="1pt,1pt,1pt,1pt"
        padding="0pt,0pt,0pt,0pt"
        fontSize="100%"
        fontWeight="bold"
        textColor="#FFFFFF"
        backgroundColor="#595762"
        >
        <state state_enabled="false" textColor="#FFFFFF"/>
        <state state_pressed="true" backgroundColor="#FFFFFF"/>
        <state state_enabled="true" state_hovered="true" backgroundColor="#9CA0AB" textColor="#666666"/>
        <state state_focused="true" state_hovered="true" backgroundColor="#9CA0AB" textColor="#FFFFFF"/>
        <state state_focused="true" backgroundColor="#CCCCCC"/>
        <state state_focused="false" state_hovered="true" textColor="#CCCCCC"/>
    </style>

    <style id="GROUP_BOX_CAPTION"
        align="Left|VCenter"
        textColor="#CCCCCC"
        padding="1pt,1pt,1pt,1pt">
    </style>

    <style id="TEXT"
        textColor="#FFFFFF">
    </style>

    <style id="COMBO_BOX"
        backgroundColor="#595762"
        textColor="#FFFFFF"
        padding="2pt,2pt,2pt,2pt"
        margins="2pt,2pt,2pt,2pt"
        minWidth="40"
        />
    <style id="COMBO_BOX_BODY"
        padding="2pt,2pt,2pt,2pt"
        minWidth="40"
        textColor="#FFFFFF"
        align="Left|VCenter"
        focusRectColors="#000"
        />
    <style id="COMBO_BOX_BUTTON"
        padding="2pt,2pt,2pt,2pt"
        backgroundColor="#9CA0AB"
        align="Center"
        />

    <style id="EDIT_LINE"
        backgroundColor="#231B24"
        textColor="#FFFFFF"
        padding="3pt,3pt,3pt,3pt"
        margins="1pt,1pt,1pt,1pt"
        minWidth="40"
        >
    </style>
    
    <style id="POPUP_MENU"
        backgroundColor="#37313B">
    </style>

    <style id="MENU_LABEL"
        textColor="#FFFFFF">
    </style>

    <style id="MENU_ITEM"
        backgroundColor="#37313B"
        padding="3pt,2pt,3pt,2pt">
        <state state_enabled="true" state_focused="true" backgroundColor="#9CA0AB" textColor="#000000"/>
    </style>

    <style id="LIST_BOX"
        backgroundColor="#231B24"
        textColor="#FFFFFF"
        padding="6pt,6pt,6pt,6pt"
        margins="6pt,6pt,6pt,6pt"
        layoutWidth="FILL_PARENT"
        layoutHeight="FILL_PARENT"
        />

    <style id="LIST_ITEM"
        backgroundColor="#595762"
        textColor="#FFFFFF"
        padding="3pt,3pt,3pt,3pt"
        margins="1pt,1pt,1pt,1pt">
        <state state_enabled="true" state_hovered="true" backgroundColor="#9CA0AB" textColor="#666666"/>
    </style>


</theme>